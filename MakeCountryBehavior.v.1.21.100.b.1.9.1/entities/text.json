{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "mc:text",
      "spawn_category": "creature",
      "is_spawnable": true,
      "is_summonable": true
    },
    "component_groups": {},
    "components": {
      "minecraft:physics": {
        "has_gravity": false
      },
      "minecraft:type_family": {
        "family": [
          "text"
        ]
      },
      "minecraft:collision_box": {
        "width": 0.001,
        "height": 0.001
      },
      "minecraft:nameable": {
        "always_show": true,
        "allow_name_tag_renaming": false
      },
      "minecraft:health": {
        "value": 600,
        "max": 600
      },
      "minecraft:knockback_resistance": 1000,
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "adminmode"
                  }
                ]
              }
            },
            "deals_damage": false
          },
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "has_damage",
                    "subject": "self",
                    "operator": "!=",
                    "value": "attack"
                  }
                ]
              }
            },
            "deals_damage": false
          }
        ]
      }
    }
  }
}